.main-content-wrapper {
  display: flex;

  height: calc(100vh - 40px);
  padding-bottom: 40px;

  background-image: linear-gradient(
    to bottom,
    #f83600 0%,
    #f9d423 30%,
    #fef6d3 60%,
    #fff 100%
  );
  flex-direction: column;
  justify-content: space-between;
}

.main-content-wrapper .banner {
  width: 100%;
}

.main-content-wrapper .title {
  padding: 0 15px;
  font-size: 36px;
  font-weight: bold;
  letter-spacing: 2px;
}

.main-content-wrapper .title view:last-child {
  text-align: right;
}

.main-content-wrapper .text {
  padding: 0 15px;
  font-size: 18px;
}

.main-content-wrapper .desc {
  padding: 0 15px;
  color: #333;
  font-size: 15px;
}
